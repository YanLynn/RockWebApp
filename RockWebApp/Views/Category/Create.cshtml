@model Category





<div class="container-fluid">
    <div class="card text-white bg-primary mb-3 mt-3 align-content-center span6 col-md-6" style="float: none; margin: 0 auto;">
    <div class="card-header">Create Category</div>
    <div class="card-body">
        <form method="post">

                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="mb-3 row p-1">

                    <label class="p-0 col-form-label col-form-label-sm">Name</label>
                    <input type="text" class="form-control form-control-sm" />
                    <span class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label class="p-0 col-form-label col-form-label-sm">Display Order</label>
                    <input type="text" class="form-control form-control-sm" />
                    <span class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-sm btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-sm btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


     
        </form>
    </div>
</div>
</div>